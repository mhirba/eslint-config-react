{
  "name": "@mhirba/eslint-config-react",
  "version": "1.0.3",
  "license": "JAM",
  "author": "Majdi Toumi <majdi@mhirba.com> (https://mhirba.com)",
  "description": "Mhirba's ui linter configuration",
  "keywords": [
    "mhirba",
    "config",
    "typescript",
    "eslint",
    "prettier",
    "react"
  ],
  "main": ".eslintrc.js",
  "files": [
    ".prettierrc.js",
    ".stylelintrc.js"
  ],
  "engines": {
    "node": ">=14.16.0",
    "yarn": ">=1.16.0"
  },
  "scripts": {
    "test": "yarn test:check && yarn test:format && yarn test:styles",
    "test:check": "yarn tsc",
    "test:format": "yarn eslint --ext .ts,.tsx tests",
    "test:styles": "yarn stylelint tests",
    "deploy": "yarn pinst --disable ; yarn npm publish ; yarn pinst --enable",
    "postinstall": "yarn husky install"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/mhirba/eslint-config-react.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/",
    "access": "public"
  },
  "peerDependencies": {
    "eslint": "*",
    "eslint-config-prettier": "*",
    "eslint-plugin-jest": "*",
    "eslint-plugin-prettier": "*",
    "eslint-plugin-react": "*",
    "prettier": "*",
    "stylelint": "*",
    "stylelint-config-standard": "*"
  },
  "devDependencies": {
    "@mhirba/eslint-config-base": "^1.0.1",
    "@types/node": "^15.3.1",
    "@types/react": "^17.0.6",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.0",
    "pinst": "^2.1.6",
    "prettier": "^2.3.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-prettier": "^1.2.0",
    "typescript": "^4.2.4"
  }
}
